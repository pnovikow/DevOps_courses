Vagrant.configure("2") do |config|

  config.vm.box = "ubuntu/bionic64"
  config.vm.box_check_update = false
  # config.vm.network "forwarded_port", guest: 2222, host: 22
  # config.vm.network "forwarded_port", guest: 80, host: 8080, host_ip: "127.0.0.1"
  #config.vm.network "private_network", ip: "192.168.33.10"


  config.vm.define "web-server" do |subconfig|
    # имя виртуальной машины
    subconfig.vm.provider "virtualbox" do |vb|
      vb.name = "web-server"
      vb.memory = "1048"
      vb.cpus = 1
    end
    subconfig.vm.hostname = "web-server"
    subconfig.vm.network "private_network", ip: "192.168.10.5"
    subconfig.vm.provision "shell", path: "create_dev_env.sh"

  end

  config.vm.define "mysql-server" do |subconfig|
    subconfig.vm.provider "virtualbox" do |vb|
      vb.name = "mysql-server"
      vb.memory = "1048"
      vb.cpus = 1
    end
    subconfig.vm.hostname = "mysql-web"
    subconfig.vm.network "private_network", ip: "192.168.10.10"
    $script = <<~SCRIPT
    echo Installing MySQL
    apt-get update
    apt-get install -y mysql-server
    echo Installing PHP
    apt-get install -y php-fpm php-mysql
    SCRIPT
    subconfig.vm.provision "shell", inline: $script
  end

end
